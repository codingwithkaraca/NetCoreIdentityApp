@model PasswordChangeVM
@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Şifre Güncelleme</h2>
        @if (TempData["SuccessMessage"] != null)
        {
        <div class="alert alert-info" role="alert">
            @TempData["SuccessMessage"]
        </div>
        }
        
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <form asp-controller="Member" asp-action="PasswordChange" method="post">
            <div class="mb-3">
                <label for="PasswordOld" class="form-label" asp-for="PasswordOld"></label>
                <input asp-for="PasswordOld" class="form-control">
                <span class="text-danger" asp-validation-for="PasswordOld"></span>
            </div>
            <div class="mb-3">
                <label for="PasswordNew" class="form-label" asp-for="PasswordNew"></label>
                <input asp-for="PasswordNew" class="form-control">
                <span class="text-danger" asp-validation-for="PasswordNew"></span>
            </div>
            <div class="mb-3">
                <label for="PasswordNewConfirm" class="form-label" asp-for="PasswordNewConfirm"></label>
                <input asp-for="PasswordNewConfirm" class="form-control">
                <span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
            </div>
            <button type="submit" class="btn btn-primary">Şifre Güncelle</button>
        </form>
    </div>
</div>

@*burası Layouttaki scriptlerden sonra gelmesini istediğimiz sayfaya özel scriptler ve kütüphanelerdir*@
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
