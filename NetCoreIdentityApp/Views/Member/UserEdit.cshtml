@{
    ViewData["Title"] = "UserEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UserEditVM

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Kullanıcı Bilgileri Güncelleme</h2>
        @if (TempData["SuccessMessage"] != null)
        {
        <div class="alert alert-info" role="alert">
            @TempData["SuccessMessage"]
        </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="PasswordOld" class="form-label" asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control">
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="mb-3">
                <label for="PasswordOld" class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label for="PasswordOld" class="form-label" asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control">
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
            <div class="mb-3">
                <label for="PasswordNew" class="form-label" asp-for="BirthDate"></label>
                <input asp-for="BirthDate" class="form-control">
                <span class="text-danger" asp-validation-for="BirthDate"></span>
            </div>
            <div class="mb-3">
                <label for="PasswordNew" class="form-label" asp-for="City"></label>
                <input asp-for="City" class="form-control">
                <span class="text-danger" asp-validation-for="City"></span>
            </div>
            <div class="mb-3">
                <label for="PasswordNewConfirm" class="form-label" asp-for="Gender"></label>
                <select class="form-control" asp-for="Gender">
                    <option value="">Cinsiyet seçiniz</option>
                    <option value="1">Kadın</option>
                    <option value="2">Erkek</option>
                    <option value="3">Belirtmek istemiyorum</option>
                </select>
                <span class="text-danger" asp-validation-for="Gender"></span>
            </div>
            <div class="mb-3">
                <label for="PasswordNew" class="form-label" asp-for="Picture"></label>
                <input asp-for="Picture" class="form-control">
                <span class="text-danger" asp-validation-for="Picture"></span>
            </div>
            <button type="submit" class="btn btn-primary">Bilgileri güncelle</button>
        </form>
    </div>
</div>

@*burası Layouttaki scriptlerden sonra gelmesini istediğimiz sayfaya özel scriptler ve kütüphanelerdir*@
@section Scripts
{
@await Html.PartialAsync("_ValidationScriptsPartial");
}
