@model List<AdminModel.AssignRoleToUserVM>
@{
    ViewData["Title"] = "AssignRoleToUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Kullanıcıya Rol Atama</h2>
        <form asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@Model[i].IsExists">
                    <label class="form-check-label" for="">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Id"/>
                    <input type="hidden" asp-for="@Model[i].Name"/>
                </div>
            }
            <button type="submit" class="btn btn-primary">Rolü Güncelle</button>
        </form>
        <div class="mt-3">
            <a asp-area="Admin"  asp-controller="Home" asp-action="UserList">Kullanıcı Listesine Dön</a>
        </div>
    </div>
</div>


